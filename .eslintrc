{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "env": {
    "browser": true
  },
  "overrides": [
    {
      "files": ["**/__tests__/**"],
      "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
      }
    }
  ]
}
